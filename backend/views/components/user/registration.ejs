<article class="content">
    <header class="content-header">
        <h1>Register</h1>
    </header>

    <form id="register" action="/user/register" method="post" class="content-body">
        <fieldset class="fieldset">
            <legend>Account Information</legend>
            <div class="row">
                <label for="username">Username</label>
            </div>
            <div class="row">
                <input type="text" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="row">
                <label for="password">Password</label>
            </div>
            <div class="row">
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
        </fieldset>
        <fieldset class="fieldset">
            <legend>Personal Information</legend>
            <div class="row">
                <label for="email">Email</label>
            </div>
            <div class="row">
                <input type="email" id="email" name="email" placeholder="Your email address" required>
            </div>
            <div class="row">
                <label for="name">Name</label>
            </div>
            <div class="row">
                <input type="name" id="name" name="name" placeholder="Your name">
            </div>
            <div class="row">
                <label for="about">About</label>
            </div>
            <div class="row">
                <textarea id="about" name="about" rows="5" placeholder="About"></textarea>
            </div>
        </fieldset>
        <fieldset class="fieldset">
            <legend>Work Information</legend>
            <div class="row">
                <label for="github">GitHub</label>
            </div>
            <div class="row">
                <input type="url" id="github" name="github" placeholder="https://github.com/your-profile">
            </div>
            <div class="row">
                <label for="website">Website</label>
            </div>
            <div class="row">
                <input type="url" id="website" name="website" placeholder="your-website.tld">
            </div>
        </fieldset>

        <div class="row">
            <button type="submit" class="button primary">Submit</button>
            <button type="reset" class="button secondary">Reset</button>
        </div>
    </form>
    
    <footer class="content-footer">
        <p>Already have an account? Login <a href="/user/login">here</a></p>
    </footer>
</article>
