<article class="content">
    <header class="content-header">
        <h1>Confirm Deletion</h1>
    </header>

        <p>Are you sure you want to permanently delete the following article?</p>
        
        <h3>"<%= article.heading %>"</h3>

        <p>This action cannot be undone.</p>
        
        <form action="/articles/<%= article._id %>?_method=DELETE" method="POST">
            <button type="submit">Yes, Delete Article</button>
        </form>

        <br>
        
        <a href="/articles/<%= article._id %>">Cancel</a>
</article>
