<% if (typeof article !== 'undefined') { %>
    <article class="content">
        <header class="content-header">
            <h1><%= article.heading %></h1>
        </header>

        <div class="content-body">
            <%= article.body %>
        </div>
        
        <footer class="content-footer">
            <address>
                <h3>Author: <a rel="author" href="/author/<%= article.author >"><%= article.author %></a></h3>
                <span>|</span>
                <span>
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                    </svg>
                    <%= article.likes %> Likes
                </span>
            </address>
            <div style="margin-top: 2rem;">
                <h3>Tags:</h3>
                <div>
                    <% article.tags.forEach((tag, index) => { %>
                        <span>
                            #<%= tag %><%= index < article.tags.length - 1 ? ", " : "" %>
                        </span>
                    <% }) %>
                </div>
            </div>
        </footer>
    </article>
<% } else { %>
    <p>Article not found.</p>
<% } %>
